{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": {
        "source": "esbuild",
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "beginsPattern": {
            "regexp": "start"
          },
          "endsPattern": {
            "regexp": "end"
          }
        }
      }
    }
  ]
}
