{
  "name": "sas-lsp",
  "displayName": "SAS Language Server",
  "description": "A SAS language server for VSCode",
  "version": "0.0.1",
  "categories": [
    "Programming Languages"
  ],
  "publisher": "sas",
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:SAS"
  ],
  "main": "./client/dist/extension",
  "contributes": {
    "configuration": {
      "title": "SAS",
      "properties": {
        "SAS.session.host": {
          "type": "string",
          "format": "hostname",
          "description": "Full URL of your viya server"
        },
        "SAS.session.user": {
          "type": "string",
          "description": "User name for authentication with password flow"
        },
        "SAS.session.clientId": {
          "type": "string",
          "description": "Client ID for authentication with password flow. Get from your admin."
        },
        "SAS.session.clientSecret": {
          "type": "string",
          "description": "Client secret for authentication with password flow. Get from your admin."
        },
        "SAS.session.tokenPath": {
          "type": "string",
          "description": "Path to a token file for authentication. Otherwise take password flow."
        },
        "SAS.session.outputHtml": {
          "type": "boolean",
          "default": true,
          "description": "Get ODS HTML5 output"
        }
      }
    },
    "commands": [
      {
        "command": "SAS.session.run",
        "title": "Run SAS code",
        "category": "SAS Session"
      },
      {
        "command": "SAS.session.close",
        "title": "Close current session",
        "category": "SAS Session"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "when": "editorLangId == SAS",
          "command": "SAS.session.run"
        }
      ]
    },
    "languages": [
      {
        "id": "SAS",
        "extensions": [
          ".sas"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "themes": [
      {
        "label": "SAS Illuminate",
        "uiTheme": "vs",
        "path": "./themes/sas-illuminate-color-theme.json"
      },
      {
        "label": "SAS Ignite",
        "uiTheme": "vs-dark",
        "path": "./themes/sas-ignite-color-theme.json"
      },
      {
        "label": "SAS High Contrast",
        "uiTheme": "hc-black",
        "path": "./themes/sas-highcontrast-color-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run lint && npm run compile",
    "lint": "node node_modules/eslint/bin/eslint.js ./client/src/**/*.ts ./server/src/**/*.ts",
    "compile": "node ./tools/build.js",
    "watch": "node ./tools/build.js dev",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "typescript": "^4.2.3",
    "esbuild": "^0.12.5"
  }
}
